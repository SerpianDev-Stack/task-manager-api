generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  }

model Task {
  id           Int      @id @default(autoincrement())
  user_id      Int
  task_name    String   @db.VarChar(200)
  state        Boolean  @default(false)
  data_criacao DateTime @default(now()) @db.Timestamp(6)
  users        User    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_users")

  @@map("tasks")
}

model User {
  id         Int      @id @default(autoincrement())
  user_name  String   @db.VarChar(100)
  password   String   @db.VarChar(255)    
  email      String   @unique @db.VarChar(100)
  created_in DateTime @default(now()) @db.Timestamp(6)
  tasks      Task[]

  @@map("users")
}
